<%- include('partials/head', {title: "Sign Up"}); %>
<body class="d-flex flex-column vh-100">
    <%- include('partials/header') %>
    <main class="container vh-100">
        <div class="container login-container d-flex justify-content-center">
            <div>
                <h3 class="p-5 text-center">Sign Up</h3>
                <form class="text-center signup-form">
                    <div class="form-group">
                        <label class="me-3" for="Email">Email</label><br>
                        <input class="input" type="email" name="email" placeholder="Email" id="email-input">
                    </div>
                    <div class="form-group">
                        <label class="me-3 username" for="password">Password</label><br>
                        <input class="input password" type="password" name="password" placeholder="Password" id="password-input">
                    </div>
                    <div class="p-1">
                        <button class="btn btn-outline-primary signup-btn" type="submit">Sign Up</button>
                    </div>
                    <div>Already have an acount? <a href="/login">sign in</a></div>
                </form>
            </div>
            <div>
                <img class="p-5" src="logo.jpg" alt="logo">
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"
    ></script>
</body>
</html>
