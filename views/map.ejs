<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Store Locations</title>
    <style>
        #container {
            display: flex;
            gap: 20px;
        }
        #map {
            height: 500px;
            width: 70%;
        }
        #store-info {
            width: 30%;
            max-height: 500px;
            overflow-y: auto;
            border: 1px solid #ccc;
            padding: 10px;
        }
        .store-item {
            margin-bottom: 20px;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <h1 class="text-center">Our Store Locations</h1>

    <!-- Container for map and store information -->
    <div id="container">
        <div id="map"></div>
        <div id="store-info">
            <h2>Store Information</h2>
            <!-- Store details will be inserted here -->
        </div>
    </div>

    <!-- Google Maps API with your API key and callback to loadMap -->
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= googleMapKey %>&callback=loadMap&loading=async&libraries=marker" defer></script>

    <script>
        function loadMap() {
            const defaultCenter = { lat: 37.7749, lng: -122.4194 };
            const map = new google.maps.Map(document.getElementById('map'), {
                center: defaultCenter,
                zoom: 5,
                mapId: '<%= googleMapId %>'
            });

            // Fetch store data from /api/branches
            fetch('http://localhost:3001/branches')
                .then(response => response.json())
                .then(stores => {
                    console.log("Fetched stores data:", stores); // Log the store data to console

                    // Populate the map with markers and the store info panel with details
                    const storeInfoContainer = document.getElementById('store-info');
                    
                    stores.forEach(store => {
                        // Create a map marker
                        console.log(store.address.latitude)
                        advancedMarker = new google.maps.marker.AdvancedMarkerElement({
                            position: { lat: store.address.latitude, lng: store.address.longitude },
                            map: map,
                            title: store.name
                        });

                        // Create an info window for each marker
                        const infoWindow = new google.maps.InfoWindow({
                            content: `<h4>${store.name}</h4><p>${store.address.street}, ${store.address.city}, ${store.address.country}</p>`
                        });

                        advancedMarker.addListener('click', function() {
                        infoWindow.open(map, advancedMarker);
                    });

                        // Add store details to the store-info container
                        const storeItem = document.createElement('div');
                        storeItem.classList.add('store-item');
                        storeItem.innerHTML = `
                            <h4>${store.name}</h4>
                            <p>Address: ${store.address.street}, ${store.address.city}, ${store.address.country}</p>
                            <p>Coordinates: (${store.address.latitude}, ${store.address.longitude})</p>
                        `;
                        storeInfoContainer.appendChild(storeItem);
                    });
                })
                .catch(error => {
                    console.error("Error fetching stores:", error);
                });
        }
    </script>
</body>
</html>
